<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="550.0" prefWidth="350.0"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="esprit.javafxesprit.controllers.chatbot.chatBot"
           style="-fx-background-color: #e3f2fd; -fx-padding: 20px;">
    <children>
        <VBox alignment="CENTER" spacing="15"
              style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">

            <!-- Header Label -->
            <Label text="ClearMind's Chatbot"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0277bd;"/>

            <!-- Input Field -->
            <TextField fx:id="inputField" prefWidth="300.0" promptText="Pose ta question mÃ©dicale..."
                       style="-fx-font-size: 14px; -fx-padding: 8px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-border-color: #81d4fa;"/>

            <!-- Send Button -->
            <Button fx:id="sendButton" text="Demander" prefWidth="120.0"
                    style="-fx-font-size: 14px; -fx-background-color: #039be5; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

            <!-- Response Area -->
            <TextArea fx:id="responseArea" editable="false" prefHeight="300.0" prefWidth="320.0"
                      wrapText="true"
                      style="-fx-font-size: 14px; -fx-control-inner-background: #e1f5fe; -fx-border-color: #4fc3f7; -fx-padding: 10px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        </VBox>
    </children>
</StackPane>
