<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="esprit.javafxesprit.controllers.patient.PaymentController">

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
        <!-- Total Price Label -->
        <Label fx:id="totalPriceLabel"
               text="Total Price: "
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>


        <!-- Pay Now Button -->
        <Button fx:id="payButton"
                text="Pay Now"
                style="-fx-background-color: #861d2a; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-cursor: hand;"
                prefWidth="150"
                onAction="#paymentButton"/>
    </VBox>
</StackPane>
